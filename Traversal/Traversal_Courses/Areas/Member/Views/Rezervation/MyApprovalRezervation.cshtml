@using EntityLayer.Concrete
@model List<Rezervation>
@{
    ViewData["Title"] = "MyApprovalRezervation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Onay Bekleyen Rezervasyonlar</h1>
<h2>@ViewBag.UserId</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>#Lokasyon</th>
        <th>Kişi Sayısı</th>
        <th>Rezervasyon Tarihi</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@item.RezervationDate</td>
            <td>@item.Status</td>
        </tr>
    }
</table>

