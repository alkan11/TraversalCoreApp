@model Traversal_Courses.Areas.Member.Models.UserEditView
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profiil Düzenleme Sayfası</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control"/>
    @Html.Label("Soyadınız")
    <input type="text" asp-for="Surname" class="form-control" />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Mail" class="form-control" />
    @Html.Label("Şifreniz")
    <input type="text" asp-for="Password" class="form-control" />
    @Html.Label("Şifre doğrulama")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    @Html.Label("Telefon")
    <input type="text" asp-for="Phone" class="form-control" />
    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="Image"/>
    </div>
    <br />
<button class="btn btn-primary">Bilgileri Güncelle</button>
</form>
